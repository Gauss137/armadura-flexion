{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/steel-calculator",
      "destination": "/steel-calculator",
      "permanent": true
    },
    {
      "source": "/balasto-calculator", 
      "destination": "/balasto-calculator",
      "permanent": true
    },
    {
      "source": "/beam-calculator",
      "destination": "/vigas/simplemente-apoyadas/carga-uniforme",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/steel",
      "destination": "/steel-calculator"
    },
    {
      "source": "/balasto",
      "destination": "/balasto-calculator"
    },
    {
      "source": "/beam",
      "destination": "/vigas/simplemente-apoyadas/carga-uniforme"
    },
    {
      "source": "/",
      "destination": "/steel-calculator",
      "has": [
        {
          "type": "host",
          "value": "steelcalculator.cswingenieriacivil.com"
        }
      ]
    }
  ]
} 